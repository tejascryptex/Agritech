<div class="container mt-5">
<div class="d-flex flex-column align-items-center">


  
    <div class="card shadow-lg card-color" style="width: 100%; max-width: 500px;"> 
      <div class="card-body">
        <h5 class="card-title"><strong><%= @crop.name.upcase %></strong></h5><hr>
        <p class="card-text">
        <b>Descrption: <%= @crop.description %><br></b>
        <b>User: <%= @crop.user.name %> [ID: <%= @crop.user.id %>]<br>
        </b>
    
    
        <div class="d-flex justify-content-center mt-4">
        <%= link_to "Edit this crop", edit_crop_path(@crop), class: "btn btn-outline-success mx-2" %> 
        <%= link_to "Back to crops", crops_path, class: "btn btn-outline-dark mx-2" %>
        <%= button_to "Destroy this crop", @crop, class: "btn btn-outline-danger mx-2", method: :delete %>
      </div>
  </div>
</div>