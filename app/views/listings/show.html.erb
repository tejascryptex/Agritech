


<div class="container mt-5">
<div class="d-flex flex-column align-items-center">


  
    <div class="card shadow-lg " style="width: 100%; max-width: 500px;"> 
      <div class="card-body">
        <h5 class="card-title"><strong><%= @listing.title.upcase %></strong></h5><hr>
        <p class="card-text">
        <b>Descrption: <%= @listing.description %> </b> <br>
        <b>User: <%= @listing.user.name %>  </b>  <br>
        <b>Price: <%= @listing.price %> </b>  <br>
        <b>Crop: <%= @listing.crop.name %> </b>  <br>
        
        
    
    
        <div class="d-flex justify-content-center mt-3">
        <%= link_to "Edit this Product", edit_listing_path(@listing), class: "btn btn-outline-success mx-2" %> 
        <%= link_to "Back ", listings_path, class: "btn btn-outline-dark mx-2" %>
        <%= button_to "Destroy this Product", @listing, class: "btn btn-outline-danger mx-2", method: :delete %>
        </div>
    </div>
</div>