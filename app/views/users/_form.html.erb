<%= form_with(model: user, local: true) do |form| %>

  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h4>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-7">
        <div class="card bg-dark text-white shadow-lg" style="border-radius: 15px;">
          <div class="card-body p-5">

            <h3 class="fw-bold mb-2 text-uppercase text-center">Register</h3>

            <div class="form-group mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, required: true, class: "form-control", placeholder: "Enter your full name" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, required: true, class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, required: true, class: "form-control", placeholder: "Enter your password" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
              <%= form.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Re-enter your password" %>
            </div>

            <div class="form-group mb-3">
              <%= form.label :location, class: "form-label" %>
              <%= form.text_field :location, class: "form-control", placeholder: "Enter your location" %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :role, class: "form-label" %>
              <%= form.select :role, options_for_select([['Farmer', 'farmer'], ['Buyer', 'buyer']]), { prompt: 'Select Role' }, class: "form-select", required: true %>
            </div>

            <div class="field">
              <%= form.label :profile_picture %>
              <%= form.file_field :photo %>
            </div>
            <br><br><hr>

            <div class="d-grid">
              <%= form.submit 'Sign Up', class: "btn btn-outline-light btn-lg px-5" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
