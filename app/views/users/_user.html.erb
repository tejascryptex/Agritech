<div id="<%= dom_id user %>">
<body class="bg-dark text-white">

<div class="card shadow text-bg-light text-black mb-3" style="width: 100%; max-width: 300px;">


  <h2 class="card-title"><%= user.name %></h2>
  <hr>
  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>
  <p>
    <strong>Password:</strong>
    <%= user.password_digest %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= user.location %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.role %>
  </p>

</div>
</div>
</div>
</body>